<div class="row">
  <div class="col-md-2">
    <table class="border border-dark">
      <thead>
        <th class="border border-dark p-2">ジャンル検索</th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="p-1 pl-2"><%= genre.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div>
    <div class="ml-3 col-md-10">
      <h4>商品一覧</h4><h6>(全<%= @items.count %>件)</h6>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-sm-4">
            <%= image_tag item.item_image, size: "150x100" %>
            <!--<% image_tag item.get_item_image(50,50) %>-->
            <p><%= item.name %></p>
            <p>￥<%= number_with_delimiter(item.price) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

