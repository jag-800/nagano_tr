<span class="py-2 px-3 bg-secondary">会員編集登録</span>

<%= form_with model: @customer, method: :patch do |f| %>

  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">名前</label>
    <div class="col-sm-5">
      <%= f.text_field :last_name, autofocus: true, id:"inputLast_name", class:"form-control" %>
      <%= f.text_field :first_name, autofocus: true, id:"inputFirst_name", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputName_kana" class="col-sm-2 col-form-label">フリガナ</label>
    <div class="col-sm-5">
      <%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana", class:"form-control" %>
      <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, id:"inputEmail", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputPost_code" class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</label>
    <div class="col-sm-5">
      <%= f.text_field :post_code, autofocus: true, id:"inputPost_code", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputAddress" class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-5">
      <%= f.text_field :address, autofocus: true, id:"inputAddress", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputPhone_number" class="col-sm-2 col-form-label">電話番号(ハイフンなし)</label>
    <div class="col-sm-5">
      <%= f.text_field :phone_number, autofocus: true, id:"inputPhone_number", class:"form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "変更内容を保存", class:"btn btn-success" %>
  </div>

  <%= link_to "退会する", root_path, class:"btn btn-danger" %>
<% end %>