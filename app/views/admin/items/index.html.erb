<div class="row">
  <div class="offset-md-1">
    <h5 class="px-4 table-secondary mb-4">商品一覧</h5>
  </div>
</div>

<table class="table mt-3">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %><tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <% if item.is_active == true %>
        <td class="text-success font-weight-bold">販売中</td>
      <% else %>
        <td class="text-secondary font-weight-bold">販売停止中</td>
      <% end %>
    </tr><% end %>
  </tbody>
</table>

<div class="row justify-content-center">
  <%= paginate @items %>
</div>
