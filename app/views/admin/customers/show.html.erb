<div class="row">
  <div class="offset-md-1">
    <h5 class="px-4 table-secondary mb-4">
      <%= @customer.last_name + @customer.first_name %>さんの会員詳細
    </h5>
  </div>
</div>

<table class="col-md-6">
  <tr>
      <td>氏名</td>
      <td><%= @customer.last_name + " " + @customer.first_name %></td>
  </tr>
  <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana + " " + @customer.first_name_kana %></td>
  </tr>
  <tr>
      <td>郵便番号</td>
      <td><%= @customer.post_code %></td>
  </tr>
  <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
  </tr>
  <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
  </tr>
</table>

<div class="row my-3 mt-4">
  <div class="col text-center">
    <%= link_to "編集する", edit_customer_path, class:"btn btn-success mr-3" %>
    <%= link_to "注文履歴一覧を見る", edit_customer_path, class:"btn btn-primary" %>
  </div>
</div>
  